{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build",
			"detail": "/usr/bin/g++",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-std=c++20",
				"${workspaceFolder}/lib/*",
				"-g",
				"${workspaceFolder}/*.cpp",
				"-o",
				"${workspaceFolder}/bin/out",
				"-lglfw",
				"-lGL",
				"-lm",
				"-lX11",
				"-lpthread",
				"-lXi",
				"-lXrandr",
				"-ldl"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
